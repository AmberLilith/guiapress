                                placeholder="Defina o tÃ­tiulo da categoria">
                            <textarea name="body" id="article" cols="30" rows="10" class="form-control"></textarea>
                            <br>
                            <label for="category">Artigo</label>
                            <select name="category" id="" class="form-control">
                                <% categories.forEach(category =>{%>
                                    <option value="<%= category.id%>"><%= category.title %></option>
                                <% }) %>
                            </select>
                            <br>
                            <button class="btn btn-success">Cadastrar</button>
                        </form>
                    </div>
                </div>

